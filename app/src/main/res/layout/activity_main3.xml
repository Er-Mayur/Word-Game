                android:layout_weight="1"
                android:onClick="inputOfButton"
                android:text="J"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/btnK"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginRight="-4dp"
                android:layout_weight="1"
                android:onClick="inputOfButton"
                android:text="K"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/btnL"
                android:layout_width="0dp"
