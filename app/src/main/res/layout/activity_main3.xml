                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginRight="-4dp"
                android:layout_weight="1"
                android:onClick="inputOfButton"
                android:text="Q"
                android:textStyle="bold|italic" />

            <Button
